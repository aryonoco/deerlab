# 1. Copy this file and fill in your values:
#      cp secrets.sops.yaml.example secrets.sops.yaml
#      $EDITOR secrets.sops.yaml
# 2. Encrypt it (one-time):
#      sops --encrypt --in-place inventory/group_vars/proxmox/secrets.sops.yaml
# 3. To edit later, sops handles decrypt/re-encrypt automatically:
#      sops inventory/group_vars/proxmox/secrets.sops.yaml
#
# Host connection (moved from hosts.yml — encrypted here, decrypted by community.sops plugin)
ansible_host: "203.0.113.1"
ansible_user: "root"
#
# Required for proxmox_install role:
proxmox_install_domain: "example.com"
proxmox_install_bridge_address: "10.10.10.1"
proxmox_install_bridge_netmask: "21"
proxmox_install_bridge_subnet: "10.10.8.0/21"
#
# Optional — omit proxmox_install_postfix_relayhost to skip relay setup:
proxmox_install_postfix_relayhost: "[smtp.example.com]:587"
proxmox_install_postfix_relay_user: "user@example.com"
proxmox_install_postfix_relay_password: "password"
#
# Required for proxmox_acme role:
proxmox_acme_account_email: "admin@example.com"
proxmox_acme_dns_credentials:
  PORKBUN_API_KEY: "pk1_..."
  PORKBUN_SECRET_API_KEY: "sk1_..."
